<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email,
                      autofocus: true,
                      autocomplete: "email",
                      class: 'form-control',
                      placeholder: 'test@diveintocode.jp' %>
  </div>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name,
                      class: 'form-control',
                      placeholder: 'DIVE太郎' %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %>
    <%= f.password_field :password,
                         autocomplete: "new-password",
                         class: 'form-control',
                         placeholder: '6文字以上' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation,
                         autocomplete: "new-password",
                         class: 'form-control',
                         placeholder: 'パスワードを再入力' %>
  </div>

  <div class="form-group">
    <%= f.label :profile_image %>
    <%= f.file_field :profile_image %>
    <!-- <div class="input-group">
      <div class="custom-file">
        <%#= f.file_field :profile_image,
                        class: 'custom-file-input',
                        id: 'profile_image_uploader' %>
        <label class="custom-file-label" for="profile_image_uploader">画像を選択…</label>
      </div>
    </div> -->
    <%= f.hidden_field :profile_image_cache %>
  </div>

  <div class="form-group">
    <%= f.submit "Sign up", class: 'btn btn-primary btn-block' %>
  </div>
<% end %>

<%= render "users/shared/links" %>
