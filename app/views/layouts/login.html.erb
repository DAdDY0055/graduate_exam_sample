<!DOCTYPE html>
<html>
  <head>
    <title>GraduateExamSample</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
  </head>

  <body>
    <%= render 'shared/header' %>
    <div class="container">
      <div class="row justify-content-center">
        <div class="card col-md-6 col-sm-12 my-4">
          <div class="card-body">
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
    <%= render 'shared/footer' %>

    <%= javascript_include_tag 'application' %>
  </body>
</html>
