<div class="card my-4">
  <div class="card-body">
    <%= form_with(model: comment, url: action_path, local: true) do |form| %>
      <div class="form-group">
        <%= form.text_area :content,
                           class: 'form-control',
                           placeholder: 'コメントを入力',
                           rows: 5 %>
      </div>

      <%= form.submit '投稿', class: 'btn btn-primary float-right' %>
    <% end %>
  </div>
</div>
